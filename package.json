{
  "type": "module",
  "version": "0.0.1-beta.6",
  "packageManager": "pnpm@9.1.1",
  "scripts": {
    "dev": "nr demo:dev",
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json --all",
    "test": "nr -C test test",
    "prepare": "simple-git-hooks",
    "core:build": "nr -C packages/core build",
    "core:dev": "nr -C packages/core dev",
    "demo:dev": "nr -C demo dev",
    "demo:build": "nr -C demo build",
    "metadata:dev": "nr -C packages/metadata dev",
    "metadata:build": "nr -C packages/metadata build",
    "creator:dev": "nr -C packages/creator dev",
    "creator:build": "nr -C packages/creator build",
    "docs:dev": "nr -C docs dev",
    "docs:build": "nr -C packages/core build && nr -C packages/metadata build && nr -C docs build",
    "docs:preview": "nr -C docs preview",
    "typecheck": "nr -r --parallel typecheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.17.0",
    "@antfu/ni": "^0.21.12",
    "bumpp": "^9.4.1",
    "eslint": "^9.2.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.1.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "zx": "^8.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

{
  "name": "@reactive-vscode/demo",
  "displayName": "demo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "The demo for reactive-vscode",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "engines": {
    "vscode": "^1.89.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "reactive-vscode-demo.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Reactive VSCode Demo",
      "properties": {
        "reactive-vscode-demo.message": {
          "type": "string",
          "default": "Hello World",
          "description": "The message to show in the notification"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reactive-vscode-demo",
          "title": "Reactive VSCode Demo",
          "icon": "$(list-flat)"
        }
      ]
    },
    "views": {
      "reactive-vscode-demo": [
        {
          "id": "reactive-tree-view",
          "name": "Tree View"
        },
        {
          "type": "webview",
          "id": "reactive-webview-view",
          "name": "Webview View"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup --env.NODE_ENV production --treeshake",
    "dev": "tsup --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "reactive-vscode": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
